<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.preim.healthydog.menuAktivity.HealthActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:height="80dp"
        android:layout_marginTop="75dp"
        android:text="@string/bErnaehrung"
        android:id="@+id/bErnaehrung"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:height="80dp"
        android:layout_marginTop="20dp"
        android:text="@string/bScanner"
        android:id="@+id/bScanner"
        android:layout_below="@+id/bErnaehrung"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:height="80dp"
        android:layout_marginTop="20dp"
        android:text="@string/bRezepte"
        android:id="@+id/bRezepte"
        android:layout_below="@+id/bScanner"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
