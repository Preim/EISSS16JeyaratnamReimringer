<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.preim.healthydog.MenuActivity">

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/bHundpass"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/pfote"
        />
    <ImageButton
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/bHealth"
        android:scaleType="centerCrop"
        android:src="@drawable/healthpfotejpg"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/bAktivitaeten"
        android:scaleType="centerCrop"
        android:src="@drawable/aktivitaetenpfote"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/bFitness"
        android:scaleType="centerCrop"
        android:src="@drawable/fitnesspfote"
        android:layout_alignTop="@+id/bAktivitaeten"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/bWetter"
        android:scaleType="centerCrop"
        android:src="@drawable/wetterpfote"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/bRouten"
        android:scaleType="centerCrop"
        android:src="@drawable/routenpfote"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
