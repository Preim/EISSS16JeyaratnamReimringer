<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/item_icon"
        android:src="@drawable/hundefutter"
        android:contentDescription="@string/imageView"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/katText"
        android:id="@+id/item_katText"
        android:textStyle="bold" android:textSize="32dp"
        android:layout_alignParentTop="true" android:layout_toRightOf="@+id/item_icon"
        android:layout_toEndOf="@id/item_icon"/>
</RelativeLayout>
